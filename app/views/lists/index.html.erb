<%# show all lists %>
<nav class="navbar navbar-dark bg-dark">
    <a class="navbar-brand" href="#">Watchlist</a>
  </nav>
<div class='banner mb-5'>
<h1 class="d-flex justify-content-center align-content-stretch flex-wrap">Welcome to Your Watchlists</h1>
  <div class="d-flex justify-content-center align-content-stretch flex-wrap">
   <h3><%= link_to "Create a new list", new_list_path, class: "btn btn-dark" %></h3>
  </div>
</div>

  <div class="d-flex justify-content-around">
    <% @lists.each do |list| %>
    <div class="card p-5 m-5" style="width: 300px" style="height: 150px">
    <img src='<%= cl_image_path list.photo.key %>' >
        <h3 class="card-title white-text"><%= link_to list.name, list_path(list) %></h3>
  </div>
        <% end %>
